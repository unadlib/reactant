{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devEngines": {
    "node": "8.x || 9.x || 10.x || 11.x || 12.x"
  },
  "description": "A framework for building React web applications",
  "scripts": {
    "test:code:prod": "cross-env NODE_ENV=production jest --config ./scripts/jest/prod.config.json",
    "test:code:dev": "cross-env NODE_ENV=development jest --config ./scripts/jest/dev.config.json",
    "test": "yarn test:code:dev",
    "test:code:useDefineForClassFields": "cross-env NODE_ENV=development jest --config ./scripts/jest/useDefineForClassFields.config.json",
    "build": "cross-env NODE_ENV=production ts-node scripts/build.ts",
    "clean": "lerna exec rimraf ./dist ./build && rimraf ./dist",
    "test:generateTestSource:huge": "ts-node scripts/performance/generateTestSourceWithReactant.ts --mode=huge",
    "test:performance:huge": "yarn test:generateTestSource:huge && yarn test:run:performance",
    "test:generateTestSource:big": "ts-node scripts/performance/generateTestSourceWithReactant.ts --mode=big",
    "test:performance:big": "yarn test:generateTestSource:big && yarn test:run:performance",
    "test:generateTestSource:small": "ts-node scripts/performance/generateTestSourceWithReactant.ts --mode=small",
    "test:performance:small": "yarn test:generateTestSource:small && yarn test:run:performance",
    "test:generateTestSource:custom": "ts-node scripts/performance/generateTestSourceWithReactant.ts --classAmount=100 --oneClassReducerAmount=20 --computedTime=1000 --allCheckedState=true",
    "test:run:performance": "ts-node packages/reactant/test/performance.tsx",
    "test:performance": "yarn test:performance:small && yarn test:performance:big && yarn test:performance:huge",
    "test:performance:custom": "yarn test:generateTestSource:custom && yarn test:run:performance",
    "performance": "yarn test:generateTestSource && yarn test:performance",
    "build:api": "ts-node scripts/typedoc.ts",
    "commit": "yarn git-cz",
    "version": "lerna version --amend --no-git-tag-version",
    "publish": "lerna exec --no-private --no-bail -- npm publish",
    "publish:docs": "cd website && GIT_USER=unadlib USE_SSH=false yarn run publish-gh-pages",
    "update-rollup": "ncu '/rollup/' -u",
    "build:lib": "rm -rf dist && lerna exec --scope=reactant --scope=reactant-di --scope=reactant-model --scope=reactant-module --scope=reactant-redux --scope=reactant-router  --scope=reactant-router-dom --scope=reactant-storage --scope=reactant-web --parallel -- rollup -c ../../rollup.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unadlib/reactant.git"
  },
  "keywords": [
    "React"
  ],
  "authors": [
    "Michael Lin <unadlib@gmail.com> (https://github.com/unadlib)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/unadlib/reactant/issues"
  },
  "homepage": "https://github.com/unadlib/reactant#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-replace": "^2.3.2",
    "@rollup/plugin-typescript": "^4.1.2",
    "@types/fs-extra": "^8.0.1",
    "@types/glob-parent": "^5.1.0",
    "@types/jest": "^24.0.25",
    "@types/node": "^13.7.1",
    "@types/react": "^16.9.25",
    "@types/react-dom": "^16.9.5",
    "@types/react-redux": "^7.1.7",
    "@types/react-router-dom": "^5.1.3",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "chalk": "^3.0.0",
    "commitizen": "^3",
    "cross-env": "^6.0.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "fs-extra": "^8.1.0",
    "glob-parent": "^5.1.0",
    "jest": "^24.9.0",
    "lerna": "^3.20.2",
    "load-json-file": "^6.2.0",
    "mobx": "^5.15.4",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.10.9",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.2",
    "rollup-plugin-postcss": "^3.1.1",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-sourcemaps": "^0.6.2",
    "rollup-plugin-terser": "^6.0.1",
    "rollup-plugin-typescript2": "^0.27.1",
    "rollup-plugin-url": "^3.0.1",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "typedoc": "^0.17.6",
    "typedoc-plugin-markdown": "^2.2.17",
    "typescript": "^3.9.2",
    "yargs": "^15.1.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
